<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>61.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>H8 Form Flow Component</masterLabel>
    <description>Simple component that requires a Form DeveloperName to be provide to determine what to render</description>
    <targets>
        <target>lightning__HomePage</target>
        <target>lightning__RecordPage</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__HomePage">
            <property name="formName" label="Form Name" type="String" />
            <property name="defaultPage" label="Default Page" type="Integer" />
        </targetConfig>
        <targetConfig targets="lightning__RecordPage">
            <property name="formName" label="Form Name" type="String" />
            <property name="recordId" label="RecordId" type="String" />
            <property name="defaultPage" label="Default Page" type="Integer" />
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>